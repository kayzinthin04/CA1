<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles/theme.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container page-shell">
    <div class="hero mb-3">
      <p class="text-uppercase text-primary small fw-semibold mb-1">History</p>
      <h2 class="fw-bold text-dark mb-0"><%= isAdminView ? 'All Orders' : 'Your Orders' %></h2>
      <p class="text-muted mb-0"><%= isAdminView ? 'View every user checkout' : 'Past purchases tied to your account' %></p>
    </div>

    <% if (error_msg && error_msg.length) { %>
      <div class="alert alert-danger alert-glass"><%= error_msg %></div>
    <% } %>
    <% if (success_msg && success_msg.length) { %>
      <div class="alert alert-success alert-glass"><%= success_msg %></div>
    <% } %>

    <% if (!orders || orders.length === 0) { %>
      <div class="card-muted">No orders found yet.</div>
    <% } else { %>
      <div class="panel">
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead>
                <tr>
                  <th>#</th>
                  <% if (isAdminView) { %><th>User</th><% } %>
                  <th>Date</th>
                  <th>Items</th>
                  <th>Total</th>
                </tr>
              </thead>
              <tbody>
                <% orders.forEach((order, idx) => { %>
                  <tr>
                    <td><%= idx + 1 %></td>
                    <% if (isAdminView) { %>
                      <td><span class="fw-semibold"><%= order.username %></span></td>
                    <% } %>
                    <td><%= new Date(order.created_at || order.createdAt).toLocaleString() %></td>
                    <td>
                      <% if (order.items && order.items.length) { %>
                        <ul class="mb-0 ps-3">
                          <% order.items.forEach(it => { %>
                            <li><%= it.productName %> &times; <%= it.quantity %> - $<%= Number(it.price).toFixed(2) %></li>
                          <% }) %>
                        </ul>
                      <% } else { %>
                        <span class="text-muted small">No items recorded</span>
                      <% } %>
                    </td>
                    <td class="fw-semibold">$<%= Number(order.total).toFixed(2) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% } %>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
