<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/theme.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Product Details</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand brand-accent" href="/">Supermarket App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav ms-auto">
              <% if (user && user.role === "admin") { %>
                <li class="nav-item">
                  <a class="nav-link" href="/inventory">Inventory</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/addProduct">Add new product</a>
                </li> 
              <% } %>
              <% if (user) { %>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
                <% if (user.role !== 'admin') { %>
                  <li class="nav-item">
                    <a class="nav-link" href="/feedback">Feedback</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/cart">Cart</a>
                  </li>
                <% } %>
              <% } else { %>
                <li class="nav-item">
                  <a class="nav-link" href="/register">Register</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/login">Login</a>
                </li>
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/contact-us">Contact Us</a>
              </li>
            </ul>
          </div>
        </div>
    </nav>

    <div class="container page-shell">
        <div class="hero mb-4">
            <p class="text-uppercase text-primary small fw-semibold mb-1">Product</p>
            <h2 class="fw-bold text-dark mb-0">Details</h2>
        </div>
        <div class="panel">
          <div class="panel-body">
            <% if (product) { %>
              <div class="row g-4 align-items-center">
                <div class="col-md-5 text-center">
                  <img src="/images/<%= product.image %>" alt="<%= product.productName %>" class="img-fluid img-thumb" style="max-height: 260px;">
                </div>
                <div class="col-md-7 text-start">
                  <div class="d-flex align-items-center gap-3 mb-2">
                    <span class="pill text-dark">#<%= product.productId || product.id %></span>
                    <% if (product.quantity > 0) { %>
                      <span class="badge role-info px-3 py-2 text-uppercase">In Stock</span>
                    <% } else { %>
                      <span class="badge bg-secondary px-3 py-2 text-uppercase text-dark">Out of Stock</span>
                    <% } %>
                  </div>
                  <h3 class="text-dark mb-2"><%= product.productName %></h3>
                  <p class="text-muted mb-3">Keep an eye on inventory and pricing from this view.</p>
                  <div class="d-flex flex-column gap-2 text-dark">
                    <div><strong>Price:</strong> $<%= Number(product.price).toFixed(2) %></div>
                    <div><strong>Quantity:</strong> <%= product.quantity %></div>
                  </div>
                  <div class="d-flex gap-2 mt-3">
                    <% if (user && user.role === "admin") { %>
                      <a href="/updateProduct/<%= product.productId || product.id %>" class="btn btn-primary btn-glow">Edit Product</a>
                      <a href="/inventory" class="btn btn-outline-secondary">Back to Inventory</a>
                    <% } else { %>
                      <a href="/shopping" class="btn btn-outline-secondary">Back to Shopping</a>
                      <% if (user) { %>
                        <form action="/add-to-cart/<%= product.productId || product.id %>" method="POST" class="d-inline-block ms-2">
                          <input type="hidden" name="quantity" value="1">
                          <button type="submit" class="btn btn-primary btn-rounded btn-sm">Add to Cart</button>
                        </form>
                      <% } else { %>
                        <a href="/login" class="btn btn-outline-secondary btn-sm">Login to add</a>
                      <% } %>
                    <% } %>
                  </div>
                </div>
              </div>
            <% } else { %>
              <p class="text-muted mb-0">No product found.</p>
            <% } %>
          </div>
        </div>
    </div>
    
</body>
</html>
