<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/checkout">Checkout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h1 class="mb-4">Shopping Cart</h1>

    <% if (error_msg && error_msg.length > 0) { %>
      <% error_msg.forEach(msg => { %>
        <div class="alert alert-danger"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (success_msg && success_msg.length > 0) { %>
      <% success_msg.forEach(msg => { %>
        <div class="alert alert-success"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty. <a href="/shopping">Start shopping</a>.</p>
    <% } else { %>
      <form action="/cart/update" method="POST">
        <table class="table table-bordered align-middle">
          <thead class="table-light">
            <tr>
              <th>Product</th>
              <th>Image</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Subtotal</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0; %>
            <% cart.forEach((item, idx) => { %>
              <% const subtotal = Number(item.price) * Number(item.quantity); total += subtotal; %>
              <tr>
                <td><%= item.productName || item.name || '(unknown)' %></td>
                <td>
                  <% if (item.image) { %>
                    <img src="/images/<%= item.image %>" style="width:64px; height:auto;">
                  <% } %>
                </td>
                <td>$<%= Number(item.price).toFixed(2) %></td>
                <td>
                  <input 
                    type="number" 
                    name="quantities[<%= idx %>]" 
                    value="<%= Number(item.quantity) %>" 
                    min="1"
                    max="<%= item.quantityAvailable %>"
                    class="form-control"
                    style="width:100px;">
                  <small class="text-muted">Max: <%= item.quantityAvailable %></small>
                </td>
                <td>$<%= subtotal.toFixed(2) %></td>
                <td>
                  <a href="/cart/remove/<%= idx %>" 
                     class="btn btn-danger btn-sm"
                     onclick="return confirm('Remove this item?');">
                     Remove
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <div class="d-flex gap-2 mb-3">
          <button type="submit" class="btn btn-secondary">Update Cart</button>
          <a href="/shopping" class="btn btn-light">Back to Shopping</a>
          <a href="/checkout" class="btn btn-primary">Proceed to Checkout</a>
        </div>

        <h3>Total: $<%= total.toFixed(2) %></h3>
      </form>
    <% } %>
  </div>
</body>
</html>