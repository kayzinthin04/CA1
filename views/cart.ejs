<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles/theme.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand brand-accent" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/checkout">Checkout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact-us">Contact Us</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container page-shell">
    <div class="hero mb-3">
      <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>
          <p class="text-uppercase text-primary small fw-semibold mb-1">Cart</p>
          <h2 class="fw-bold text-dark mb-0">Review Items</h2>
        </div>
        <a href="/shopping" class="btn btn-outline-light btn-rounded">Continue Shopping</a>
      </div>
    </div>

    <% if (error_msg && error_msg.length > 0) { %>
      <% error_msg.forEach(msg => { %>
        <div class="alert alert-danger alert-glass"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (success_msg && success_msg.length > 0) { %>
      <% success_msg.forEach(msg => { %>
        <div class="alert alert-success alert-glass"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (!cart || cart.length === 0) { %>
      <p class="text-muted">Your cart is empty. <a href="/shopping">Start shopping</a>.</p>
    <% } else { %>
      <form action="/cart/update" method="POST">
        <div class="panel">
          <div class="panel-body p-0">
            <table class="table table-hover align-middle mb-0">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Image</th>
                  <th>Price</th>
                  <th>Quantity</th>
                  <th>Subtotal</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% let total = 0; %>
                <% cart.forEach((item, idx) => { %>
                  <% const subtotal = Number(item.price) * Number(item.quantity); total += subtotal; %>
                  <tr>
                    <td class="fw-semibold"><%= item.productName || item.name || '(unknown)' %></td>
                    <td>
                      <% if (item.image) { %>
                        <img src="/images/<%= item.image %>" class="img-thumb" style="width:64px; height:auto;">
                      <% } %>
                    </td>
                    <td>$<%= Number(item.price).toFixed(2) %></td>
                    <td>
                      <input 
                        type="number" 
                        name="quantities[<%= idx %>]" 
                        value="<%= Number(item.quantity) %>" 
                        min="1"
                        max="<%= item.quantityAvailable %>"
                        class="form-control"
                        style="width:100px;">
                      <small class="text-muted">Max: <%= item.quantityAvailable %></small>
                    </td>
                    <td>$<%= subtotal.toFixed(2) %></td>
                    <td>
                      <a href="/cart/remove/<%= idx %>" 
                         class="btn btn-outline-danger btn-sm btn-rounded"
                         onclick="return confirm('Remove this item?');">
                         Remove
                      </a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="d-flex gap-2 mb-3">
          <button type="submit" class="btn btn-secondary btn-rounded">Update Cart</button>
          <a href="/shopping" class="btn btn-outline-secondary btn-rounded text-dark">Back to Shopping</a>
          <a href="/checkout" class="btn btn-primary btn-rounded btn-glow">Proceed to Checkout</a>
        </div>

        <h3 class="text-dark">Total: $<%= total.toFixed(2) %></h3>
      </form>
    <% } %>
  </div>
</body>
</html>
