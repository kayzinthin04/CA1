<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/theme.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Supermarket App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand brand-accent" href="/">Supermarket App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Register</a>
                    </li> 
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a> 
                    </li> 
                    <li class="nav-item">
                        <a class="nav-link" href="/feedback">Feedback</a> 
                    </li> 
                    <li class="nav-item">
                        <a class="nav-link" href="/contact-us">Contact Us</a> 
                    </li> 
                </ul>
            </div>
        </div>
    </nav>
    <div class="container page-shell">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="hero text-center mb-3">
                    <p class="text-uppercase text-primary small fw-semibold mb-1">Welcome back</p>
                    <h2 class="fw-bold text-white mb-0">Login</h2>
                </div>

                <% if (error_msg && error_msg.length > 0) { %>
                    <div class="alert alert-danger alert-glass">
                        <% error_msg.forEach(function(error) { %>
                            <p class="mb-1"><%= error %></p>
                        <% }); %>
                    </div>
                <% } %>
                
                <% if (success_msg && success_msg.length > 0) { %>
                    <div class="alert alert-success alert-glass">
                        <% success_msg.forEach(function(message) { %>
                            <p class="mb-1"><%= message %></p>
                        <% }); %>
                    </div>
                <% } %>
                
                <div class="panel">
                    <div class="panel-body">
                        <form action="/login" method="POST" class="d-grid gap-3">
                            <div>
                                <label for="email" class="form-label">Email</label>
                                <input type="email" id="email" name="email" class="form-control" required>
                            </div>
                            <div>
                                <label for="password" class="form-label">Password</label>
                                <input type="password" id="password" name="password" class="form-control" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-rounded btn-glow">Login</button>
                        </form>
                        <p class="text-muted small mt-3 mb-0">Need an account? <a href="/register">Register</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
