<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles/theme.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Inventory</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand brand-accent" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addProduct">Add Product</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/users">User Dashboard</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/feedback-status">Feedback (admin)</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/contact-us">Contact Us</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container page-shell">
    <div class="hero mb-4">
      <div class="d-flex flex-wrap justify-content-between align-items-start gap-3">
        <div>
          <p class="text-uppercase text-primary small fw-semibold mb-1">Admin Workspace</p>
          <h2 class="fw-bold text-white mb-2">Inventory</h2>
          <p class="text-muted mb-0">Review and maintain product listings, stock, and pricing.</p>
        </div>
        <div class="text-end">
          <p class="mb-1 text-muted small">Signed in as</p>
          <h6 class="mb-0 text-white"><%= user.username %> (<%= user.role %>)</h6>
        </div>
      </div>
    </div>

    <div class="panel">
      <div class="panel-header d-flex justify-content-between align-items-center bg-transparent">
        <div>
          <p class="text-uppercase text-muted small mb-0">Catalog</p>
          <h4 class="mb-0 text-white">Products</h4>
        </div>
        <a class="btn btn-primary btn-rounded btn-glow" href="/addProduct">+ Add Product</a>
      </div>
      <div class="panel-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0 align-middle text-center">
            <thead>
                <tr>
                  <th width="100">Product</th>
                  <th width="140">Image</th>
                  <th width="80">Quantity</th>
                  <th width="80">Price</th>
                  <th width="60">Edit</th>
                  <th width="60">Delete</th>
                </tr>
            </thead>
            <tbody>
              <% for (let i = 0; i < products.length; i++) { 
                   const p = products[i]; %>
                <tr>
                  <td>
                    <a href="/product/<%= p.productId %>" class="text-dark fw-semibold text-decoration-none">
                      <%= p.name || ('(missing name, id:' + p.productId + ')') %>
                    </a>
                  </td>
                  <td><img src="/images/<%= p.image %>" alt="<%= p.name %>" class="img-thumb" style="max-width:120px;"></td>
                  <td><%= p.quantity %></td>
                  <td>$<%= Number(p.price).toFixed(2) %></td>
                  <td><a class="btn btn-sm btn-primary btn-rounded btn-glow" href="/updateProduct/<%= p.productId %>">Edit</a></td>
                  <td><a class="btn btn-sm btn-danger btn-rounded" href="/deleteProduct/<%= p.productId %>" onclick="return confirm('Are you sure?')">Delete</a></td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
