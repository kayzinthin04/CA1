<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles/theme.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Checkout</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand brand-accent" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact-us">Contact Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container page-shell">
    <div class="hero mb-3">
      <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>
          <p class="text-uppercase text-primary small fw-semibold mb-1">Checkout</p>
          <h2 class="fw-bold text-dark mb-0">Confirm & Pay</h2>
        </div>
        <a href="/cart" class="btn btn-outline-light btn-rounded">Back to Cart</a>
      </div>
    </div>

    <% if (error_msg && error_msg.length > 0) { %>
      <% error_msg.forEach(function(msg){ %>
        <div class="alert alert-danger alert-glass" role="alert"><%= msg %></div>
      <% }); %>
    <% } %>

    <% if (success_msg && success_msg.length > 0) { %>
      <% success_msg.forEach(function(msg){ %>
        <div class="alert alert-success alert-glass" role="alert"><%= msg %></div>
      <% }); %>
    <% } %>
    
    <% if (typeof checkout_messages !== 'undefined' && checkout_messages.length > 0) { %>
      <% checkout_messages.forEach(function(msg){ %>
        <div class="alert alert-warning alert-glass" role="alert"><%= msg %></div>
      <% }); %>
    <% } %>

    <div class="panel">
      <div class="panel-header bg-transparent border-0">
        <h5 class="mb-0 text-dark">Order Summary</h5>
      </div>
      <div class="panel-body">
        <table class="table table-hover">
          <thead><tr><th>Product</th><th>Price</th><th>Quantity</th><th>Total</th></tr></thead>
          <tbody>
            <% (cart || []).forEach(item => { %>
              <tr>
                <td><%= item.productName || item.name || item.productName %></td>
                <td>$<%= Number(item.price).toFixed(2) %></td>
                <td><%= item.quantity %></td>
                <td>$<%= (Number(item.price) * Number(item.quantity)).toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-3">
          <h4 class="text-dark mb-0">Total: $<%= Number(total).toFixed(2) %></h4>
          <form action="/checkout/confirm" method="POST" class="d-flex gap-2">
            <button type="submit" class="btn btn-success btn-rounded btn-glow">Confirm & Pay</button>
            <a href="/cart" class="btn btn-outline-secondary btn-rounded text-dark">Back to Cart</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
