<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Checkout</title>
</head>
<body>
  <!-- show flash/errors if any -->
  <% if (messages && messages.length) { %>
    <div class="container mt-3">
      <% messages.forEach(function(msg){ %>
        <div class="alert alert-danger" role="alert"><%= msg %></div>
      <% }); %>
    </div>
  <% } %>

  <div class="container">
    <h1>Checkout</h1>

    <h4>Order Summary</h4>
    <table class="table">
      <thead><tr><th>Product</th><th>Price</th><th>Quantity</th><th>Total</th></tr></thead>
      <tbody>
        <% (cart || []).forEach(item => { %>
          <tr>
            <td><%= item.productName || item.name || item.productName %></td>
            <td>$<%= Number(item.price).toFixed(2) %></td>
            <td><%= item.quantity %></td>
            <td>$<%= (Number(item.price) * Number(item.quantity)).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h4>Total: $<%= Number(total).toFixed(2) %></h4>

    <form action="/checkout/confirm" method="POST">
      <!-- Add payment fields here (card details) or redirect to payment gateway -->
      <button type="submit" class="btn btn-success">Confirm & Pay</button>
      <a href="/cart" class="btn btn-light">Back to Cart</a>
    </form>
  </div>
</body>
</html>