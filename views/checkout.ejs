<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Checkout</title>
</head>
<body>
  
  <div class="container mt-3">
    <% if (error_msg && error_msg.length > 0) { %>
      <% error_msg.forEach(function(msg){ %>
        <div class="alert alert-danger" role="alert"><%= msg %></div>
      <% }); %>
    <% } %>

    <% if (success_msg && success_msg.length > 0) { %>
      <% success_msg.forEach(function(msg){ %>
        <div class="alert alert-success" role="alert"><%= msg %></div>
      <% }); %>
    <% } %>
    
    <% if (typeof checkout_messages !== 'undefined' && checkout_messages.length > 0) { %>
      <% checkout_messages.forEach(function(msg){ %>
        <div class="alert alert-warning" role="alert"><%= msg %></div>
      <% }); %>
    <% } %>
  </div>

  <div class="container">
    <h1>Checkout</h1>

    <h4>Order Summary</h4>
    <table class="table">
      <thead><tr><th>Product</th><th>Price</th><th>Quantity</th><th>Total</th></tr></thead>
      <tbody>
        <% (cart || []).forEach(item => { %>
          <tr>
            <td><%= item.productName || item.name || item.productName %></td>
            <td>$<%= Number(item.price).toFixed(2) %></td>
            <td><%= item.quantity %></td>
            <td>$<%= (Number(item.price) * Number(item.quantity)).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h4>Total: $<%= Number(total).toFixed(2) %></h4>

    <form action="/checkout/confirm" method="POST">
      <button type="submit" class="btn btn-success">Confirm & Pay</button>
      <a href="/cart" class="btn btn-light">Back to Cart</a>
    </form>
  </div>
</body>
</html>