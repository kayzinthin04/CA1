<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles/theme.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>User Dashboard</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand brand-accent" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add Product</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/users">User Dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/feedback-status">Feedback (admin)</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact-us">Contact Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container page-shell">
    <div class="hero mb-3">
      <div class="d-flex flex-wrap justify-content-between align-items-start gap-3">
        <div>
          <p class="mb-1 text-uppercase text-primary fw-semibold small">Admin Console</p>
          <h2 class="fw-bold text-white mb-1">User Management</h2>
          <p class="text-muted mb-0">Track your community at a glance and manage accounts confidently.</p>
        </div>
        <div class="text-end">
          <p class="mb-1 text-muted small">Signed in as</p>
          <h5 class="mb-0 text-white"><%= user.username %> (<%= user.role %>)</h5>
        </div>
      </div>
    </div>

    <% if (success_msg) { %>
      <div class="alert alert-success alert-glass"><%= success_msg %></div>
    <% } %>
    <% if (error_msg) { %>
      <div class="alert alert-danger alert-glass"><%= error_msg %></div>
    <% } %>

    <% const adminCount = users ? users.filter(u => u.role === 'admin').length : 0; %>
    <% const customerCount = users ? users.filter(u => u.role === 'user').length : 0; %>
    <form class="mb-3 d-flex align-items-center gap-2" method="get" action="/users">
      <label class="text-muted mb-0">Filter by role:</label>
      <select name="role" class="form-select" style="max-width: 180px;" onchange="this.form.submit()">
        <option value="all" <%= selectedRole === 'all' ? 'selected' : '' %>>All</option>
        <option value="admin" <%= selectedRole === 'admin' ? 'selected' : '' %>>Admins</option>
        <option value="user" <%= selectedRole === 'user' ? 'selected' : '' %>>Users</option>
      </select>
    </form>

    <div class="row g-3 mb-3">
      <div class="col-md-4">
        <div class="stat-card">
          <div class="stat-title">Total Users</div>
          <div class="stat-value"><%= totalUsers %></div>
          <div class="text-primary fw-semibold small">All roles</div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stat-card">
          <div class="stat-title">Admins</div>
          <div class="stat-value"><%= adminCount %></div>
          <div class="text-danger fw-semibold small">Protected from deletion</div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="stat-card">
          <div class="stat-title">Customers</div>
          <div class="stat-value"><%= customerCount %></div>
          <div class="text-info fw-semibold small">Regular shopper accounts</div>
        </div>
      </div>
    </div>

    <div class="panel">
      <div class="panel-header bg-transparent border-0 d-flex justify-content-between align-items-center">
        <div>
          <p class="text-uppercase text-muted small mb-0">Directory</p>
          <h4 class="mb-0 text-white">User Accounts</h4>
        </div>
        <span class="badge bg-secondary text-light">Updated <%= new Date().toLocaleDateString() %></span>
      </div>
      <div class="panel-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0 align-middle text-light">
            <thead class="table-light">
              <tr class="text-nowrap text-center">
                <th>User ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Address</th>
                <th>Contact</th>
                <th>Role</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (users && users.length) { %>
                <% users.forEach(u => { %>
                  <tr class="text-center">
                    <td><%= u.userId %></td>
                    <td class="fw-semibold"><%= u.username %></td>
                    <td><%= u.email %></td>
                    <td><%= u.address %></td>
                    <td><%= u.contact %></td>
                    <td>
                      <span class="badge <%= u.role === 'admin' ? 'role-admin' : 'role-user' %> px-3 py-2 text-uppercase">
                        <%= u.role %>
                      </span>
                    </td>
                    <td>
                      <% if (u.role === 'admin') { %>
                        <span class="text-muted small">No actions</span>
                      <% } else { %>
                        <a href="/users/delete/<%= u.userId %>" class="btn btn-sm btn-outline-danger btn-rounded"
                           onclick="return confirm('Delete user <%= u.username %>?');">
                          Delete
                        </a>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="7" class="text-center py-4 text-muted">No users found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
