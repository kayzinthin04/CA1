<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles/theme.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Community Feedback</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand brand-accent" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/feedback">Feedback</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact-us">Contact Us</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container page-shell">
    <div class="hero mb-3">
      <h2 class="fw-bold text-dark mb-1">Community Feedback</h2>
      <p class="text-muted mb-0">See what others are saying. Emails are hidden for privacy.</p>
    </div>

    <% if (success_msg && success_msg.length) { %>
      <div class="alert alert-success alert-glass"><%= success_msg %></div>
    <% } %>
    <% if (error_msg && error_msg.length) { %>
      <div class="alert alert-danger alert-glass"><%= error_msg %></div>
    <% } %>

    <div class="panel">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Message</th>
                <th>Status</th>
                <th>Submitted</th>
              </tr>
            </thead>
            <tbody>
              <% if (submissions && submissions.length) { %>
                <% submissions.forEach((fb) => { %>
                  <tr>
                    <td><%= fb.id %></td>
                    <td><%= fb.name %></td>
                    <td><%= fb.message %></td>
                    <td><span class="badge bg-success text-white"><%= fb.status %></span></td>
                    <td><%= fb.createdAt.toLocaleString() %></td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="text-center text-muted">No feedback yet.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
