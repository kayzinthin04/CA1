<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/cart">View Cart</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Products from Supermarket</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Product Name</th>
            <th width="100">Product Image</th>
            <th width="50">Quantity</th>
            <th width="50">Price</th>
            <th width="50">Quantity</th>
            <th width="50">Buy</th>
          </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < products.length; i++) { 
             const p = products[i]; %>
          <tr>
            <td>
              <a href="/product/<%= p.productId %>" style="color:#000; text-decoration:none;">
                <%= p.name || ('(missing name, id:' + p.productId + ')') %>
              </a>
            </td>
            <td><img src="/images/<%= p.image %>" alt="<%= p.name %>" style="max-width:120px;"></td>
            <td><%= p.quantity %></td>
            <td>$<%= Number(p.price).toFixed(2) %></td>

            <!-- selection quantity (separate TD) -->
            <td class="align-middle">
              <form id="qty-form-<%= p.productId %>" action="/add-to-cart/<%= p.productId %>" method="POST" class="d-flex justify-content-center">
                <input type="number" name="quantity" value="1" min="1" max="<%= p.quantity %>" class="form-control" style="width:90px;">
              </form>
            </td>

            <!-- buy button (separate TD) -->
            <td class="align-middle text-center">
              <button form="qty-form-<%= p.productId %>" type="submit" class="btn btn-primary">Buy</button>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <% if (showViewCart) { %>
      <div class="text-center mt-3">
        <a href="/cart" class="btn btn-primary">View Cart</a>
      </div>
    <% } %>
  </div>
</body>
</html>
