<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles/theme.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand brand-accent" href="/">Supermarket App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav ms-auto">
            <% if (user) { %>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li> 
              <% if (user.role !== 'admin') { %>
                <li class="nav-item">
                  <a class="nav-link" href="/cart">Cart</a>
                </li> 
              <% } %>
              <% if (user.role !== 'admin') { %>
                <li class="nav-item">
                  <a class="nav-link" href="/feedback">Feedback</a>
                </li>
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/contact-us">Contact Us</a>
              </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
              </li> 
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li> 
              <li class="nav-item">
                <a class="nav-link" href="/contact-us">Contact Us</a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>

  <div class="container page-shell">
    <div class="hero mb-4">
      <div class="d-flex flex-wrap justify-content-between align-items-center">
        <div>
          <p class="text-uppercase text-primary small fw-semibold mb-1">Shopping</p>
          <h2 class="fw-bold text-dark mb-0">Browse Products</h2>
          <p class="text-muted mb-0">Add items to your cart and check out when you’re ready.</p>
        </div>
        <% if (user) { %>
          <div class="text-end">
            <p class="text-muted small mb-1">Signed in as</p>
            <h6 class="text-dark mb-0"><%= user.username %></h6>
          </div>
        <% } %>
      </div>
    </div>

    <h5 class="section-title">Fresh Picks</h5>
    <p class="section-subtitle">Select products · Add to cart · Checkout</p>

    <div class="product-grid">
      <% for (let i = 0; i < products.length; i++) { 
           const p = products[i]; %>
        <div class="product-card">
          <div class="position-absolute top-0 end-0 m-2">
            <span class="badge bg-success text-white">Fresh</span>
          </div>
          <a href="/product/<%= p.productId %>">
            <img src="/images/<%= p.image %>" alt="<%= p.name %>">
          </a>
          <h6 class="mt-2 mb-1"><%= p.name || ('(missing name, id:' + p.productId + ')') %></h6>
          <div class="price">$<%= Number(p.price).toFixed(2) %></div>
          <div class="text-muted small mb-2">In stock: <%= p.quantity %></div>
          <% if (user) { %>
            <form id="qty-form-<%= p.productId %>" action="/add-to-cart/<%= p.productId %>" method="POST" class="d-flex gap-2 justify-content-center align-items-center">
              <input type="number" name="quantity" value="1" min="1" max="<%= p.quantity %>" class="form-control" style="width:90px;">
              <button type="submit" class="btn btn-primary btn-sm btn-rounded btn-glow">Add</button>
            </form>
          <% } else { %>
            <a href="/login" class="btn btn-outline-secondary btn-sm btn-rounded">Login to add</a>
          <% } %>
        </div>
      <% } %>
    </div>

    <% if (showViewCart) { %>
      <div class="text-center mt-3">
        <a href="/cart" class="btn btn-outline-secondary btn-rounded">View Cart</a>
      </div>
    <% } %>
  </div>
</body>
</html>
